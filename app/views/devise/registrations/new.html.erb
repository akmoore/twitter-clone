<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, placeholder: 'you@email.com' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: 'First & Last Name' %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, placeholder: '@username' %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, placeholder: 'Baton Rouge, LA' %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.trix_editor :bio, placeholder: 'Something about you' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

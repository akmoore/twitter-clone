<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1 class="text-center">All the Tweets in the World</h1>
            <h3 class="text-center">Coming Soon</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-light mb-4'%>
            <table class="table table-striped table-hover">
                <thead class='thead-dark'>
                    <tr>
                        <th>Message</th>
                        <th>User</th>
                        <th colspan='3'></th>
                    </tr>
                </thead>
                <tbody>
                    <% @tweets.each do |tweet| %>
                        <tr>
                            <td><%= tweet.message %></td>
                            <td><%= tweet.user.try(:username) %></td>
                            <td><%= link_to fa_icon('eye', text: 'Show'), tweet, class: 'btn btn-sm btn-success' %></td>
                            <td><%= link_to fa_icon('pencil', text: 'Edit'), edit_tweet_path(tweet), class: 'btn btn-sm btn-primary' %></td>
                            <td><%= link_to fa_icon('trash', text: 'Delete'), tweet, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%= form_for @tweet do |f|%>
    <!-- Check for Errors -->
    <% if @tweet.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@tweet.errors.count, 'error')%> prohibited this tweet from being saved:
            </h2>
            <ul>
                <% @tweet.errors.full_messages.each do |message|%>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <!-- The Actual Form -->
    <div class="field form-group">
        <%= f.label :message %> <br>
        <%= f.trix_editor :message, class: 'form-control' %>
    </div>
    <div class="field form-group">
        <%= f.hidden_field :user_id, value: current_user.id, class: 'form-control'%>
    </div>
    <div class="actions form-group">
        <%= f.submit class: 'btn btn-info'%>
    </div>
<% end %>